{
  "name": "@blizzbolts/docit-core",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "default": "./build/index.cjs"
    }
  },
  "scripts": {
    "dev": "npm run build -- --sourcemap --watch ./src --watch ../shared/build --watch ../plugin-docit/build",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "CONSOLA_LEVEL=4 vitest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@blizzbolts/vite-plugin-docit": "workspace:^",
    "@blizzbolts/docit-shared": "workspace:^",
    "bundle-require": "^4.0.1",
    "esbuild": "^0.18.20",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "lodash.defaultsdeep": "^4.6.1",
    "lodash.template": "^4.5.0",
    "vite": "^4.4.9"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/lodash.defaultsdeep": "^4.6.7",
    "@types/lodash.template": "^4.5.1",
    "type-fest": "^4.3.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "dts": true,
    "splitting": false,
    "shims": true,
    "clean": true,
    "outDir": "build",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
