{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true, // allow default imports for CommonJS modules


    // alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },

    // stricts
    "strict": true,
    "skipLibCheck": true
  },

  "include":  ["src", "test"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}