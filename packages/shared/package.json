{
  "name": "@blizzbolts/docit-shared",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./node": {
      "require": "./dist/index.node.cjs",
      "import": "./dist/index.node.js"
    },
    "./client": {
      "require": "./dist/index.client.cjs",
      "import": "./dist/index.client.js"
    }
  },
  "typesVersions": {
    "*": {
      "node": [
        "./dist/index.node.d.ts"
      ],
      "client": [
        "./dist/index.client.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "npm run build -- --sourcemap --watch",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "CONSOLA_LEVEL=4 vitest",
    "coverage": "vitest run --coverage && serve ./coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/find-package-json": "^1.2.3",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "type-fest": "^4.3.1",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "bundle-require": "^4.0.1",
    "consola": "^3.2.3",
    "find-package-json": "^1.2.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "load-tsconfig": "^0.2.5",
    "pkg-up": "^4.0.0",
    "zod": "^3.22.2"
  },
  "tsup": {
    "entry": {
      "index.node": "src/index.node.ts",
      "index.client": "src/index.client.ts",
      "index": "src/index.ts"
    },
    "dts": true,
    "splitting": false,
    "shims": true,
    "outDir": "dist",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
