{
  "name": "@blizzbolts/docit-shared",
  "version": "1.0.0",
  "description": "",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "default": "./build/index.cjs",
      "import": "./build/index.js"
    },
    "./node": {
      "default": "./build/index.node.cjs",
      "import": "./build/index.node.js"
    },
    "./client": {
      "default": "./build/index.client.cjs",
      "import": "./build/index.client.js"
    }
  },
  "typesVersions": {
    "*": {
      "node": [
        "./build/index.node.d.ts"
      ],
      "client": [
        "./build/index.client.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "npm run build -- --sourcemap --watch",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "CONSOLA_LEVEL=4 vitest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/find-package-json": "^1.2.3",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "type-fest": "^4.3.1"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "pkg-up": "^4.0.0",
    "consola": "^3.2.3",
    "find-package-json": "^1.2.0"
  },
  "tsup": {
    "entry": {
      "index.node": "src/index.node.ts",
      "index.client": "src/index.client.ts",
      "index": "src/index.ts"
    },
    "dts": true,
    "splitting": false,
    "shims": true,
    "clean": true,
    "outDir": "build",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
