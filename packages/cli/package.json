{
  "name": "@blizzbolts/docit-cli",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "bin": {
    "docit-cli": "./bin/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "npm run build -- --sourcemap --watch ./src --watch ../shared/dist --watch ../core/dist",
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "docit"
  ],
  "author": "citrus327",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.4.5"
  },
  "dependencies": {
    "vite": "^4.4.11",
    "@blizzbolts/docit-core": "workspace:^",
    "@blizzbolts/docit-shared": "workspace:^",
    "@clack/prompts": "^0.7.0",
    "commander": "^11.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "dts": true,
    "splitting": false,
    "shims": true,
    "outDir": "dist",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
