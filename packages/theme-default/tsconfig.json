{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "bundler",

    // react
    "jsx": "react-jsx", // support JSX

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styled-system/*": ["./styled-system/*"]
    },
  },
  "include":  ["src", "styled-system"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}