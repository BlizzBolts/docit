{
  "name": "@blizzbolts/docit-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "citrus327",
    "email": "citrus327@outlook.com"
  },
  "scripts": {
    "app": "docit-cli start",
    "build": "pnpm run clean && pnpm -r run build",
    "dev": "pnpm run build && run-p -l -n -c dev:*",
    "clean": "rimraf -g ./packages/*/build",
    "dev:shared": "pnpm --filter @blizzbolts/docit-shared dev",
    "dev:core": "pnpm --filter @blizzbolts/docit-core dev",
    "dev:app": "pnpm --filter docit-app dev",
    "dev:cli": "pnpm --filter @blizzbolts/docit-cli dev",
    "dev:plugin-docit": "pnpm --filter @blizzbolts/vite-plugin-docit dev",
    "lint": "eslint packages/*/**/*.{ts,tsx} --fix",
    "format": "prettier packages/*/src/**/* -w",
    "test": "vitest",
    "test-ui": "vitest --ui --coverage.enabled=true --coverage.provider=v8 --coverage.clean"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-istanbul": "^0.34.5",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.5",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "fs-extra": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.27.0",
    "tmp-promise": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4",
    "wait-on": "^7.0.1"
  }
}
