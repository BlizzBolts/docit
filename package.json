{
  "name": "@blizzbolts/docit-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "citrus327",
    "email": "citrus327@outlook.com"
  },
  "scripts": {
    "app": "docit-cli start",
    "app:build": "docit-cli build",
    "build": "pnpm run clean && pnpm -r run build",
    "dev": "pnpm run build && run-p -l -n -c dev:*",
    "clean": "rimraf -g ./packages/*/dist",
    "dev:shared": "pnpm --filter @blizzbolts/docit-shared dev",
    "dev:core": "pnpm --filter @blizzbolts/docit-core dev",
    "dev:theme": "pnpm --filter @blizzbolts/docit-theme-default dev",
    "dev:app": "pnpm --filter docit-app dev",
    "dev:cli": "pnpm --filter @blizzbolts/docit-cli dev",
    "dev:plugin-docit": "pnpm --filter @blizzbolts/vite-plugin-docit dev",
    "lint": "biome lint packages/*/src/**/* --apply",
    "format": "biome format packages/*/src/**/* --write",
    "lf": "pnpm run lint && pnpm run format",
    "test": "vitest",
    "test-ui": "vitest --ui --coverage.enabled=true --coverage.provider=istanbul"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@blizzbolts/docit-cli": "workspace:*",
    "@blizzbolts/docit-core": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@playwright/test": "^1.39.0",
    "@types/fs-extra": "^11.0.3",
    "@types/lodash.isempty": "^4.4.8",
    "@types/node": "^20.8.7",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "fs-extra": "^11.1.1",
    "get-port": "^7.0.0",
    "lodash.isempty": "^4.4.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "tmp-promise": "^3.0.3",
    "tsup": "^7.2.0",
    "type-fest": "^4.5.0",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "wait-on": "^7.0.1"
  }
}
