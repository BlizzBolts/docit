{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "strict": false,
    "sourceMap": true
  },
  "include": ["client/**/*.ts", "node/**/*.ts"]
}
